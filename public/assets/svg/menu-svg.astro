---
interface Props {
  openNavigation : boolean
}

const { openNavigation } = Astro.props
---

<svg
class="overflow-visible"
width="20"
height="12"
viewBox="0 0 20 12"
>
<rect
  class="transition-all origin-center"
  y={openNavigation ? "5" : "0"}
  width="20"
  height="2"
  rx="1"
  fill="white"
  transform={`rotate(${openNavigation ? "45" : "0"})`}
/>
<rect
  class="transition-all origin-center"
  y={openNavigation ? "5" : "10"}
  width="20"
  height="2"
  rx="1"
  fill="white"
  transform={`rotate(${openNavigation ? "-45" : "0"})`}
/>
</svg>